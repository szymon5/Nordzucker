<Window x:Class="CustomersAndOrders.PopupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomersAndOrders" ResizeMode="NoResize" Topmost="True"
        mc:Ignorable="d" Title="Popup" Height="279" Width="231">
    <Grid>
        <Label x:Name="lblCustomer" HorizontalAlignment="Left" Margin="15,21,0,0" 
               VerticalAlignment="Top" FontSize="14"/>
        <Button Content="Edit user data" HorizontalAlignment="Center" Margin="0,68,0,0" 
                VerticalAlignment="Top" Width="115" Height="36"
                Click="EditUserData_Click"/>
        <Button Content="Delete user" HorizontalAlignment="Center" 
                VerticalAlignment="Top" Width="115" Height="36"
                Click="DeleteUser_Click" Margin="0,113,0,0"/>
        <Button Content="Back" HorizontalAlignment="Center" Margin="0,155,0,0" 
            VerticalAlignment="Top" Width="115" Height="36"
            Click="Back_Click"/>
    </Grid>
</Window>
